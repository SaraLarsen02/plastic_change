---
const { beskrivelse, header, placeholder1, placeholder2 } = Astro.props;
import H3 from "../components/H3.astro";
import Button from "../components/Button.astro";
---

<article class="bg-white w-40 border-rounded">
  <slot>
    <H3>{header}</H3>
    <p>{beskrivelse}</p>
    <div class="">
      <input type="text" name="form_felt" placeholder={placeholder1} />
      <input type="text" name="form_felt" placeholder={placeholder2} />
    </div>
  </slot>
  <Button />
</article>
