---
const { beskrivelse, overskrift, placeholder1 } = Astro.props;
import H3 from "../components/H3.astro";
import Button from "../components/Button.astro";
---

<article class="w-[382px] h-[485px] mt-[37px] flex flex-col justify-center space-y-10 bg-white rounded-[37px] cursor-default">
  <div class="flex justify-center">
    <p class="antonio text-black text-[25px] tracking-[2.75px] leading-[40px] w-[284px]">{overskrift}</p>
  </div>
  <div class="space-y-8">
    <div class="flex justify-center gap-16">
      <div class="gap-2">
        <input type="checkbox" id="Månedligt" name="Månedligt" class="rounded-full w-[28px] h-[28px] border-2 border-[#A6A6A6]" />
        <label for="nyhedsbrev">Månedligt</label>
      </div>
      <div>
        <input type="checkbox" id="én_gang" name="én_gang" class="rounded-full w-[28px] h-[28px] border-2 border-[#A6A6A6]" />
        <label for="nyhedsbrev">Én gang</label>
      </div>
    </div>
    <!-- Checkbokse med tal -->
    <article class="flex justify-center gap-5">
      <div class="flex justify-center">
        <label class="relative cursor-pointer flex items-center">
          <!-- Checkbox -->
          <input type="checkbox" class="hidden peer" />

          <!-- Checkbox visuel (firkant) med tekst -->
          <div class="w-20 h-20 bg-white border-2 border-[#A6A6A6] rounded-full flex items-center justify-center text-black peer-checked:bg-[#FF8400] peer-checked:text-black transition-colors">
            <!-- Tekst inde i checkboxen -->
            <span>50</span>
          </div>
        </label>
      </div>
      <div class="flex items-center">
        <label class="relative cursor-pointer flex items-center">
          <!-- Checkbox -->
          <input type="checkbox" class="hidden peer" />

          <!-- Checkbox visuel (firkant) med tekst -->
          <div class="w-20 h-20 bg-white border-2 border-[#A6A6A6] rounded-full flex items-center justify-center text-black peer-checked:bg-[#FF8400] peer-checked:text-black transition-colors">
            <!-- Tekst inde i checkboxen -->
            <span>75</span>
          </div>
        </label>
      </div>
      <div class="flex items-center">
        <label class="relative cursor-pointer flex items-center">
          <!-- Checkbox -->
          <input type="checkbox" class="hidden peer" />

          <!-- Checkbox visuel (firkant) med tekst -->
          <div class="w-20 h-20 bg-white border-2 border-[#A6A6A6] rounded-full flex items-center justify-center text-black peer-checked:bg-[#FF8400] peer-checked:text-black transition-colors">
            <!-- Tekst inde i checkboxen -->
            <span>125</span>
          </div>
        </label>
      </div>
    </article>

    <form class="space-y-2 grid grid-cols-1">
      <div class="flex justify-center">
        <input type="text" name="form_felt" placeholder={placeholder1} class="rounded-full border-2 border-[#A6A6A6] w-[284px]" />
      </div>
      <div class="flex justify-center">
        <Button type="submit" class="w-[286px] h-[44px]">Støt nu</Button>
      </div>
    </form>
  </div>
</article>
