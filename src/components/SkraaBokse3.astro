      </div>
      <div class="border-4 rounded-full border-[#FF8400]">
        <Image class="m-8" src={twitter} alt="Facebook-ikon" />
      </div>
      <div class="border-4 rounded-full border-[#FF8400]">
        <Image class="m-8" src={linkedin} alt="Facebook-ikon" />
      </div>
      <div class="border-4 rounded-full border-[#FF8400]">
        <Image class="m-8" src={youtube} alt="Facebook-ikon" />
      </div>
      <div class="border-4 rounded-full border-[#FF8400]">
        <Image class="m-8" src={insta} alt="Facebook-ikon" />
      </div>
    </div>
    <div class="flex justify-center">
      <p class="text-[#FF8400] text-[22px] tracking-[2.42px]">#plasticchange</p>
      <p class="text-[#FF8400] text-[22px] tracking-[2.42px]">#singleusesucks</p>
