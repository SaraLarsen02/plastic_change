---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import SkraaBokse from "../components/SkraaBokse.astro";
import SkraaBokse2 from "../components/SkraaBokse2.astro";
import IkonSektion from "../components/IkonSektion.astro";
import H1 from "../components/H1.astro";
import H2 from "../components/H2.astro";
import H3 from "../components/H3.astro";
import Brodtekst from "../components/Brodtekst.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import icon_1 from "../assets/images/icon_1.png";
import icon_2 from "../assets/images/icon_2.png";
import Forms from "../components/Forms.astro";
import Forms2 from "../components/Forms2.astro";
import Hero from "../components/Hero.astro";
const image1 = "public/icon_1.png";
const image2 = "public/icon_2.png";
const image3 = "public/icon_3.png";
const image4 = "public/icon_4.png";
const image5 = "public/icon_5.png";
const image6 = "public/icon_6.png";
const image7 = "public/icon_7.png";
---

<MainLayout title="Titel">
  <section>
    <Hero />
  </section>
  <article>
    <h1>Index overskrift</h1>
    <Button>Støt nu</Button>
    <p>Link til <Link href="https://www.kea.dk" target="_blank">En anden side</Link></p>
    <Image src={thumbsup} alt="" />
  </article>
  <article class="bg-black">
    <H1 tekst="VERDEN DRUKNER I UNØDVENDIG PLASTIK" />
    <H2 tekst="PLASTIKFORURENING" />
    <H3 tekst="PLASTIK TRUER LIVET I HAVET" />
    <Brodtekst tekst="Her er en brødtekst" />
  </article>
  <section>
    <IkonSektion overskrift="Hej" brodtekst="se her" imageUrl={image1} />
    <IkonSektion overskrift="Hej" brodtekst="se her" imageUrl={image2} />
    <IkonSektion overskrift="Hej" brodtekst="se her" imageUrl={image3} />
    <IkonSektion overskrift="Hej" brodtekst="se her" imageUrl={image4} />
    <IkonSektion overskrift="Hej" brodtekst="se her" imageUrl={image5} />
    <IkonSektion overskrift="Hej" brodtekst="se her" imageUrl={image6} />
    <IkonSektion overskrift="Hej" brodtekst="se her" imageUrl={image7} />
  </section>
  <SkraaBokse />
  <SkraaBokse2 />
  <Forms overskrift="STØT SOM VIRKSOMHED" beskrivelse="Ved at blive en sponsor hos os, bidrager din virksomhed til vores indsats med at beskytte naturen mod plastikforurening." placeholder1="Virksomhed" placeholder2="CVR-nummer" />
  <Forms2 />
</MainLayout>
