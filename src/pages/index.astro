<script>
  // Animation på skrå bokse
  import { animate, stagger, inView, scroll, timeline } from "motion";
  inView(".fotoinview", () => {
    animate(".fotoinview", { y: [2000, 0] }, { duration: 0.75 });
  });
  inView(".fotoinview2", () => {
    animate(".fotoinview2", { y: [4000, 0] }, { duration: 0.75 });
  });

  // Animation på hero
  scroll(animate(".parallaxgrafik1", { y: [0, -200] }), {
    target: document.querySelector(".parallaxgrafik"),
    offset: ["start end", "end start"],
  });
  scroll(animate(".parallaxgrafik2", { x: [-0, -300], y: [500, -500] }), {
    target: document.querySelector(".parallaxgrafik"),
    offset: ["start end", "end start"],
  });
  scroll(animate(".parallaxgrafik3", { x: [-0, 100], y: [200, -200] }), {
    target: document.querySelector(".parallaxgrafik"),
    offset: ["start end", "end start"],
  });
  scroll(animate(".parallaxgrafik4", { x: [300, -300], y: [600, -600] }), {
    target: document.querySelector(".parallaxgrafik"),
    offset: ["start end", "end start"],
  });
  scroll(animate(".parallaxgrafik5", { x: [1100, -600], y: [-200, -200] }), {
    target: document.querySelector(".parallaxgrafik"),
    offset: ["start end", "end start"],
  });
  scroll(animate(".parallaxgrafik6", { x: [-0, 0], y: [150, -200] }), {
    target: document.querySelector(".parallaxgrafik"),
    offset: ["start end", "end start"],
  });

  // Klik-Forsvind
  scroll(animate(".progress", { strokeDasharray: ["0,1", "1,1"] }));
</script>

